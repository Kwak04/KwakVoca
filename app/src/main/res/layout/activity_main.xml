<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_round_extra_bold"
            android:text="@string/text_my_vocabulary_list"
            android:textColor="@color/colorWhite"
            android:textSize="30sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btn_add_words"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/colorTransparent"
            android:contentDescription="@string/content_add_words"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_add_circle_white" />

        <ImageButton
            android:id="@+id/btn_bookmarks"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="7dp"
            android:background="@color/colorTransparent"
            android:contentDescription="@string/content_bookmark"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_bookmark_white" />

        <ImageButton
            android:id="@+id/btn_exam"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="7dp"
            android:background="@color/colorTransparent"
            android:contentDescription="@string/content_bookmark"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_exam_white" />

        <ImageButton
            android:id="@+id/btn_settings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="7dp"
            android:background="@color/colorTransparent"
            android:contentDescription="@string/content_settings"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_settings_white" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/word_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

</LinearLayout>